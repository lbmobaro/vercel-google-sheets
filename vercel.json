{
  "version": 2,
  "builds": [
    {
      "src": "api/cron.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/cron.js"
    },
    {
      "src": "/src/(.*)",
      "dest": "/src/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "*/10 * * * *"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 90
    },
    "src/**/*.js": {
      "maxDuration": 90
    }
  }
}
